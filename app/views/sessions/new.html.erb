<div class="sessions_form">

  <%= form_with(url: login_path, local: true) do |form| %>

    <div class="field">
      <%= form.label :email, 'Email' %>
      <%= form.text_field :email, autocomplete: 'off'  %>
    </div>

    <div class="field">
      <%= form.label :password, 'Password' %>
      <%= form.password_field :password  %>
    </div>

    <div class="actions">
      <%= form.submit value: "Login"  %>
      or <%= link_to 'sign up', new_registration_path %>
      or <%= link_to 'forgot your password', password_reset_path %>
    </div>

  <% end %>
</div>
